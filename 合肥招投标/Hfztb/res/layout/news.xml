<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent"
  android:id="@+id/news_tele"
    android:background="#ECE9EA"
    android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android"> 
  <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
<TextView 
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:id="@+id/news_details_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ECE9EA"
    android:text=""
    android:textColor="#ff000000"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:textSize="24sp"
    />
<TextView 
    android:layout_marginTop="10dip"
    android:id="@+id/news_details_time"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ECE9EA"
    android:text=""
    android:textColor="#ff000000"
    android:gravity="center"
    android:textSize="11sp"
    />
<ImageView 
    android:layout_marginTop="10dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/line"
    />
<ProgressBar 
    android:id="@+id/news_details_progress"
    android:layout_width="36dip"
    android:layout_height="36dip"
    android:layout_gravity="center"
    android:visibility="gone"
    android:clickable="false"
    style="?android:attr/progressBarStyleLarge"
    />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
<TextView 
    android:layout_marginTop="10dip"
    android:layout_marginLeft="12dip"
    android:layout_marginRight="12dip"
    android:id="@+id/news_details_text"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ECE9EA"
    android:text=""
    android:textColor="#ff000000"
    android:textSize="19sp"
    />
<!--  
<Button 
    android:layout_marginTop="10dip"
    android:layout_marginLeft="12dip"
    android:layout_marginRight="12dip"
    android:id="@+id/news_details_download"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:text="sa"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="20dip"
    android:layout_alignWithParentIfMissing="true"
    android:textColor="#337DC8"
    android:textSize="79sp"
    />
    -->
</RelativeLayout>
</LinearLayout>
</ScrollView>